exception NoAnswer

datatype pattern = Wildcard
		 | Variable of string
		 | UnitP
		 | ConstP of int
		 | TupleP of pattern list
		 | ConstructorP of string * pattern

datatype valu = Const of int
	      | Unit
	      | Tuple of valu list
	      | Constructor of string * valu

fun g f1 f2 p =
    let 
	val r = g f1 f2 
    in
	case p of
	    Wildcard          => f1 ()
	  | Variable x        => f2 x
	  | TupleP ps         => List.foldl (fn (p,i) => (r p) + i) 0 ps
	  | ConstructorP(_,p) => r p
	  | _                 => 0
    end

datatype typ = Anything
	     | UnitT
	     | IntT
	     | TupleT of typ list
	     | Datatype of string

(* end helper code *)


(* problem 1 *)
fun only_capitals (strlist) = 
    List.filter(fn s => Char.isUpper(String.sub(s, 0))) strlist


(* problem 2 *)
fun longest_string1 (srtlist) = 
    case strlist of
	[] => ""
      | _ => List.foldl(fn s => String.size(s)) strlist
